@model Reservation

@{
    ViewData["Title"] = "Potwierdź rezerwację";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Pacjent:</dt>
                <dd class="col-sm-8">@Model.Patient.FirstName @Model.Patient.LastName</dd>

                <dt class="col-sm-4">Placówka:</dt>
                <dd class="col-sm-8">@Model.Location.Name</dd>

                <dt class="col-sm-4">Pokój:</dt>
                <dd class="col-sm-8">@Model.Room.Number</dd>

                <dt class="col-sm-4">Doktor:</dt>
                <dd class="col-sm-8">@Model.Doctor.FirstName @Model.Doctor.LastName</dd>

                <dt class="col-sm-4">Zabieg:</dt>
                <dd class="col-sm-8">@Model.ProcedureType.Title</dd>

                <dt class="col-sm-4">Data wizyty:</dt>
                <dd class="col-sm-8">@(((DateTime)Model.Time!).ToString("yyyy-MM-dd"))</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-center gap-2">
        <a class="btn btn-primary" asp-action="Date">Cofnij</a>
        <a class="btn btn-danger" asp-action="Cancel">Anuluj</a>
        <a class="btn btn-success" asp-action="Reserve">Zarezerwuj</a>
    </div>
</div>
