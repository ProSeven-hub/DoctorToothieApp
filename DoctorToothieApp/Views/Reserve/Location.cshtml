@model DoctorToothieApp.Controllers.ReserveLocationVM

@{
    ViewData["Title"] = "Wybierz placówkę";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Wybierz placówkę</h2>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <form asp-action="Location" class="border rounded-4 p-4 shadow-sm bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="LocationId" class="form-label">Placówka</label>
                    <select asp-for="LocationId" asp-items="Model.Locations" class="form-select"></select>
                    <span asp-validation-for="LocationId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a class="btn btn-outline-danger" asp-action="Cancel">Anuluj</a>
                    <button type="submit" class="btn btn-primary">Dalej</button>
                </div>
            </form>
        </div>
    </div>
</div>
